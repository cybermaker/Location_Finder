<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="com.example.toshiba.location_finder.Signup">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/egco" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Username"
        android:id="@+id/textView3"
        android:background="@drawable/round_corner"
        android:gravity="center|clip_vertical|center_horizontal"
        android:textColor="#636fd4"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:id="@+id/user_s"
        android:background="@drawable/round_corner_edit"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Password"
        android:id="@+id/textView4"
        android:background="@drawable/round_corner"
        android:gravity="center|clip_vertical|center_horizontal"
        android:textColor="#636fd4"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user_s"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="25dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:id="@+id/pass_s"
        android:background="@drawable/round_corner_edit"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:text="Latitude"
        android:id="@+id/textView5"
        android:layout_below="@+id/pass_s"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/round_corner"
        android:gravity="center_vertical|center|center_horizontal"
        android:textColor="#1763c1" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:text="Longtiitude"
        android:id="@+id/textView6"
        android:background="@drawable/round_corner"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#1763c1"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:id="@+id/lat"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_corner_edit"
        android:gravity="center|center_horizontal" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:id="@+id/lon"
        android:background="@drawable/round_corner_edit"
        android:gravity="center|center_horizontal"
        android:layout_alignTop="@+id/lat"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Random by clicking"
        android:id="@+id/clickrnd"
        android:layout_below="@+id/lat"
        android:layout_alignParentStart="true"
        android:background="@drawable/round_button"
        android:layout_marginTop="25dp"
        android:onClick="onrandomclick" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Add New User"
        android:id="@+id/adduser"
        android:background="@drawable/round_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="onAdd" />

</RelativeLayout>
